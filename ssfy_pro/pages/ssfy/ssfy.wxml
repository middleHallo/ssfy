<!--pages/ssfy/ssfy.wxml-->
<text class='more' style='width:{{textw}}px;' bindtap='goList'>更多搞笑方言合集</text>
<view class='head'>
  <image src='../../images/ssfy/top.jpg' mode='widthFill' style='width:{{vw}}px;height:220px'></image>
</view>

<view class='separate'>--------------热门评论--------------</view>

<scroll-view scroll-y="true" style='height:{{scrollH}}px;'>

  <block wx:for="{{comments}}" wx:key="*this">
    <!-- 每一行 -->
    <view  class='comments'>
      <!-- 头像 -->
      <image src='{{item.avatarUrl}}'></image>

      <!-- 昵称与评论 -->
      <view class='commentcon'>
        <!-- 昵称与date -->
        <view class='commenttop'>
          <view class="nickname">{{item.nickname}}</view>
          <view class="datetime">2018-06-12</view>
        </view>

        <!-- 评论 -->
        <view class='commentbottom'>
          <view class='sentence'>{{item.comment}}</view>
        </view>
      </view>

    </view>
  </block>
  <view class='addmorecomment' bindtap='addmore'>加载更多...</view>
</scroll-view>

<view class='bottombtn'>
  <input class='inputto' type='text' style='width:{{inputw}}px;' placeholder='{{word}}用你家乡话怎么说？' bindinput='inputcomment'></input>
  <button class='saybtn' bindtap='say'>说一句</button>
</view>

