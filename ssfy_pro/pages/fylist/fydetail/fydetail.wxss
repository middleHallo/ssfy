/* pages/fylist/fydetail/fydetail.wxss */

.pagebody{
  width: 750rpx;
  height: 100vw;
}

.htcontent{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  position: relative;
}

.htimg{
  width: 750rpx;
}

.httitle{
  position: absolute;
  z-index: 9;
  color: white;
  bottom: 30rpx;
  left: 20rpx;
  font-size: 32rpx;
}

.hotnavi{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 80rpx;
  background-color: #F2F2F2;
}

.hotnavi image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.hotnavi text{
  color: #444442;
  margin-left: 10rpx;
}

.comment{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-start;
  margin-top: 27rpx;
}

.icon{
  
  width: 100rpx;
  margin-left: 10rpx;
}
.icon image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.userinfo{
  width: 630rpx;
  margin-left: 20rpx;
}

.nickname{
  color: #f34f00;
  font-size: 30rpx;

}
.commetn_content{
  font-size: 30rpx;
  color: #808080;
}

.other{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
  margin-right: 30rpx;
  /* width: 630rpx; */
  width:600rpx;
}

.time{
  width: 50%;
  font-size: 26rpx;
  color: #7f7f7f;
}

.setgood{
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  position: relative;
}
.setgood text{
  font-size: 28rpx;
  color: #808080;
}

.good_selected{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.setgood_btn{
  height: 40rpx;
  width: 40rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  opacity: 0;
  position: absolute;
  right: 40rpx;
  top: 0rpx;
  z-index: 10;
}


.separater{
  height: 2rpx;
  background-color: #F0F0F0;
}

.bottom_action{
  display: flex;
  flex-direction: row;
  width: 750rpx;
  justify-content: flex-start;
  align-items: center;
  height: 50px;
  background-color: #F2F2F2;
}

.bottom_action input{
  width: 550rpx;
  height: 40px;
  border: solid 1px #BDBDBD;
  margin-left: 5rpx;
  border-radius: 8rpx;
  padding-left: 5px;
}

.bottom_action button{
  width: 150rpx;
  height: 40px;
  line-height: 40px;
  font-size: 30rpx;
  background-color: #f96810;
  color: white;
  
}